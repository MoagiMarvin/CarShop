<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CarShop.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:CarShop.Views"
    Shell.NavBarIsVisible="False">

    <TabBar>
        <ShellContent
            Title="Shop"
            Icon="shop.png"
            ContentTemplate="{DataTemplate views:CarShopPage}"
            Route="CarShop" />

        <ShellContent
            Title="Cart"
            Icon="cart.png"
            ContentTemplate="{DataTemplate views:CartPage}"
            Route="Cart" />

        <ShellContent
            Title="Profile"
            Icon="profile.png"
            ContentTemplate="{DataTemplate views:ProfilePage}"
            Route="Profile" />
    </TabBar>

</Shell>